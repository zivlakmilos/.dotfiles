for_window [class="timetrace"] resize 720 400
for_window [class="timetrace"] move scratchpad
for_window [class="timetrace"] border pixel 5
exec --no-startup-id alacritty --class timetrace,timetrace
bindsym $mod+Shift+p exec --no-startup-id "alacritty --class timetrace,timetrace";

